{
  "productName": "Cheru",
  "version": "0.2.5",
  "identifier": "com.cheru.launcher",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "launcher",
        "title": "Cheru",
        "width": 680,
        "height": 480,
        "center": true,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "shadow": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost; font-src 'self'; connect-src ipc: http://ipc.localhost http://localhost:1420 ws://localhost:1421",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "/Applications/**",
            "/System/Applications/**",
            "$HOME/Applications/**",
            "$HOME/.cache/cheru/**",
            "$HOME/Desktop/**",
            "$HOME/Documents/**",
            "$HOME/Downloads/**",
            "$HOME/Pictures/**",
            "$HOME/Projects/**",
            "$HOME/Developer/**",
            "$HOME/Code/**"
          ]
        }
      }
    },
    "macOSPrivateApi": true,
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
