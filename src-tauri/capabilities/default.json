{
  "identifier": "default",
  "description": "Capability for the main launcher window",
  "windows": ["launcher"],
  "permissions": [
    "core:default",
    "core:image:default",
    "core:window:allow-show",
    "core:window:allow-hide",
    "core:window:allow-set-focus",
    "core:window:allow-center",
    "global-shortcut:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/rg",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ]
}
